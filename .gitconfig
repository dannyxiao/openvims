[user]
	name            = Danny Xiao
	email           = danny8303@gmail.com

[alias]
	st              = status
	ci              = commit
	co              = checkout
	br              = branch
	df              = diff
	lg              = log -p
	lol             = log --graph --decorate --pretty = oneline --abbrev-commit
	lola            = log --graph --decorate --pretty = oneline --abbrev-commit --all
	ls              = ls-files

[color]
	ui              = auto

[color "branch"]
	current         = yellow reverse
	local           = yellow
	remote          = green

[color "diff"]
	meta            = yellow bold
	frag            = magenta bold
	old             = red bold
	new             = green bold

[color "status"]
	added           = yellow
	changed         = green
	untracked       = cyan

[http]
	postBuffer      = 524288000

[push]
	default         = tracking

[core]
packedGitWindowSize = 1m
packedGitLimit      = 128m
editor              = vim

[pack]
windowMemory        = 256m
threads             = 1
window              = 0
depth               = 1
deltaCacheSize      = 1
packSizeLimit       = 56m
